name: CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      # Setting up Node.js environment
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14' # Specify the Node.js version

      # Install dependencies
      - name: Install dependencies
        run: npm install

      # Optionally run tests
      - name: Run tests
        run: npm test

      # Build the project
      - name: Build
        run: npm run build

      # Additional steps like deployment can go here
